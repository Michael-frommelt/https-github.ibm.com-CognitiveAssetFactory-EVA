{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "username": {
            "description": "Username",
            "type": "string"
        },
        "password": {
            "description": "Password",
            "type": "password",
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@!%*?&])[A-Za-z\\d@!%*?&]{8,16}"
        },
        "database-type": {
            "description": "The database type",
            "type": "string"
        },
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space"
        },
        "prod-resource-group":{
            "description": "The bluemix resource group"
        },
        "prod-app-name":{
            "description": "The application name"
        }
    },
    "required": [
        "username",
        "password",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-resource-group",
        "prod-app-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": [
                "33%",
                "33%",
                "33%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/username"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/password"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/database"
                    }
                },
                {
                    "key": "username"
                },
                {
                    "key": "password"
                },
                {
                    "type": "select",
                    "key": "database-type",
                    "enum": [
                        "Cloudant NoSQL DB",
                        "Compose for MongoDB"
                    ]
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space"
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/resource-group"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/app-name"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/empty"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-resource-group"
                },
                {
                    "type": "select",
                    "key": "prod-app-name"
                }
            ]
        }
    ]
}
